 <h1>Listing Tasks</h1>
  <div>
    <a href='/tasks/new'>New</a>
  </div>
  <table class='table table-striped table-hover table-bordered'>
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Content</th>
      <th>Status</th>
      <th>Created Time</th>
      <th colspan='2'>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
     <tr>
       <td><%= task.id %></td>
       <td><%= task.name %></td>
       <td><%= task.content %></td>
       <td><%= task.status_name %></td>
       <td><%= task.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
       <td>
         <a href=<%= "/tasks/#{task.id}/edit" %>>Edit</a>
       </td>
       <td>
         <form action=<%= "/tasks/#{task.id}" %> class='form-inline' method='post'>
           <input name='_method' type='hidden' value='delete'>
           <input class='btn btn-danger' onclick='return confirm("Delete Task?")' type='submit' value='Delete'>
         </form>
       </td>
     </tr>
    <% end %>
    </tbody>
  </table>
